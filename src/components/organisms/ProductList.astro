---
import { getProducts } from "@/core/usecases/getProducts";
import Card from "../molecules/Card.astro";

const products = await getProducts();
---

<section
  class="product-list mt-4 flex justify-center md:justify-between items-center flex-wrap gap-4 text-white"
  aria-label="Product List"
>
  {
    products.map((product) => (
      <Card
        image={product.image}
        name={product.name}
        description={product.description}
        subtitle={product.subtitle}
        price={product.price}
      />
    ))
  }
</section>
