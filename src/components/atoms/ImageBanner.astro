---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  height: number;
  width: number;
  class?: string;
}

const { src, alt, height, width } = Astro.props;
---

<Image
  src={src}
  class={`size-full object-cover rounded-2xl ${Astro.props.class}`}
  alt={alt || "Promotional Banner"}
  height={height || "300"}
  width={width || "1200"}
/>
